{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "SessionTimeoutInMin": "60",
    "Url": "",
    "ApiPath": "/api/"
  },
  "OpenIdConnect": {
    "Authority": "https://localhost:5001",
    "ClientId": "bff-gw",
    "ClientSecret": "secret",
    "Scopes": "openid profile api offline_access"
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "api/{**remainder}"
        }
      },
      "appRoute": {
        "ClusterId": "appCluster",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "{**remainder}"
        }
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "appCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:3000"
          }
        }
      }
    }
  }
}
