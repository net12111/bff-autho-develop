{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "SessionTimeoutInMin": "60",
    "Url": "",
    "ApiPath": "/api/"
  },
  "OpenIdConnect": {
    "Authority": "https://localhost:5001",
    "ClientId": "gw-api",
    "ClientSecret": "secret",
    "Scopes": "openid profile offline_access sale.all",
    "DownStreamServices": [
      {
        "ApiPath": "sale",
        "ClientId": "sale-api",
        "ClientSecret": "secret",
        "Scope": "sale.read"
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "api/{**remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/sale" },
          { "PathPrefix": "/api" },
          { "RequestHeadersCopy": "true" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      },
      "appRoute": {
        "ClusterId": "appCluster",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "{**remainder}"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "appCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:3000"
          }
        }
      }
    }
  }
}
